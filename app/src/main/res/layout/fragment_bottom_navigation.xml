<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.bottomNavigation">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        tools:ignore="BottomAppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bottom_navbar_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottom_navbar_img_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/bottom_bar_home" />

                <TextView
                    android:id="@+id/bottom_navbar_text_explore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_menu_home"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_navbar_explore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottom_navbar_img_explore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/bottom_bar_explore" />

                <TextView
                    android:id="@+id/bottom_navbar_text_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_menu_explore"
                    android:textAlignment="center"
                    android:textColor="@color/solidGrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_navbar_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottom_navbar_img_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/btn_3" />

                <TextView
                    android:id="@+id/bottom_navbar_text_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_menu_cart"
                    android:textAlignment="center"
                    android:textColor="@color/solidGrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_navbar_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottom_navbar_img_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/btn_4" />

                <TextView
                    android:id="@+id/bottom_navbar_text_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_menu_account"
                    android:textAlignment="center"
                    android:textColor="@color/solidGrey" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>
</FrameLayout>